# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=chatbotdb

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:5173
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# =============================================================================
# AI PROVIDER CONFIGURATION
# =============================================================================
# Options: gemini, openai, mock
AI_PROVIDER=gemini

# =============================================================================
# GEMINI CONFIGURATION
# =============================================================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME=ChatBot API
APP_VERSION=1.0.0
DEBUG=false

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=127.0.0.1
PORT=8000
RELOAD=true

# =============================================================================
# CHAT CONFIGURATION
# =============================================================================
# Maximum number of messages to include in chat history for AI context
MAX_HISTORY_MESSAGES=15

